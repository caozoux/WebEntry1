<?xml version="1.0" encoding="UTF-8"?>
  <!DOCTYPE hibernate-mapping PUBLIC 
       "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
       "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
  <hibernate-mapping>
   <class name="hotfix.db.config.hotfix_hibernate_config_bean" table="khotfix_kerlist">
        <!-- 主键 -->
        <id name="id" type="int">
            <column name="id" />
            <generator class="identity" />
        </id>
        
        <property name="kerver" type="java.lang.String">
            <column name="kerver" />
        </property>
        
        <!-- 字段 -->
        <property name="kerdesc" type="java.lang.String">
            <column name="kerdesc" />
        </property>
    </class>
  </hibernate-mapping>
