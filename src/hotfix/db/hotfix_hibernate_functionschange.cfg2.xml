<?xml version="1.0" encoding="UTF-8"?>
  <!DOCTYPE hibernate-mapping PUBLIC 
       "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
       "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
  <hibernate-mapping>
      <!-- name代表的是实体类名，table代表的是表名 -->
    <class name="hotfix.db.rpminfo.hotfix_hibernate_functionschange_bean" table="hotfix_7u_modify_functions">
        <!-- 主键 -->
        <id name="id" type="int">
            <column name="id" />
            <generator class="identity" />
        </id>
 
        <!-- 字段 -->
        <property name="akid" type="java.lang.String">
            <column name="akid" />
        </property>
        
      	<!-- 字段 -->
        <property name="file" type="java.lang.String">
            <column name="file" />
        </property>
    
        <!-- 字段 -->
        <property name="mode" type="java.lang.String">
            <column name="mode" />
        </property>    
        
        <!-- 字段 -->
        <property name="functions" type="java.lang.String">
            <column name="functions" />
        </property>

    </class>
  </hibernate-mapping>
