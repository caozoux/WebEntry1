<?xml version="1.0" encoding="UTF-8"?>
  <!DOCTYPE hibernate-mapping PUBLIC 
       "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
       "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
  <hibernate-mapping>
      <!-- name代表的是实体类名，table代表的是表名 -->
    <class name="hotfix.db.hitfix_rpminfo_bean" table="khotfix_debug">
        <!-- 主键 -->
        <id name="id" type="int">
            <column name="id" />
            <generator class="identity" />
        </id>
        
        <!-- 字段 -->
        <property name="akid" type="java.lang.String">
            <column name="akid" />
        </property>
        
      	<!-- 字段 -->
        <property name="link" type="java.lang.String">
            <column name="link" />
        </property>
        
        <!-- 字段 -->
        <property name="summary" type="java.lang.String">
            <column name="summary" />
        </property>
        
         <!-- 字段 -->
        <property name="description" type="java.lang.String">
            <column name="description" />
        </property>
        
         <!-- 字段 -->
        <property name="author" type="java.lang.String">
            <column name="author" />
        </property>
        
         <!-- 字段 -->
        <property name="functest" type="java.lang.String">
            <column name="functest" />
        </property>
                
         <!-- 字段 -->
        <property name="patchlink" type="java.lang.String">
            <column name="patchlink" />
        </property>
                
         <!-- 字段 -->
        <property name="aonelink" type="java.lang.String">
            <column name="aonelink" />
        </property>
          
    </class>
  </hibernate-mapping>
